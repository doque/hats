# Routes
# This file defines all application routes (Higher priority routes first)

# Home page
GET     /                           controllers.Application.index

# Cards in a Sessions
POST	/:id/newCard				controllers.Card.newCard(id: Long)
POST	/:id/editCard/:cardId		controllers.Card.editCard(id: Long,cardId: Long)
POST 	/:id/deleteCard/:cardId		controllers.Card.deleteCard(id: Long,cardId: Long)

# Session control
GET		/:id						controllers.ThinkingSession.index(id: Long)
POST	/:id/changeHat/:hat			controllers.ThinkingSession.goToHat(id: Long,hat: String)
POST	/:id/finish					controllers.ThinkingSession.finish(id: Long)


GET 	/test						controllers.Application.test

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
